{
  "name": "maoxian-web-clipper",
  "version": "0.4.1",
  "description": "A web extension to clip information from web page. Save it to your local machine to avoid information invalidation. Not bored registration, Not charged.",
  "main": "",
  "type": "module",
  "scripts": {
    "dev-chrome": "npm run dev-chromium",
    "dev-chromium": "web-ext run --target chromium --source-dir dist/extension/maoxian-web-clipper",
    "dev-firefox": "web-ext run --target firefox-desktop --source-dir dist/extension/maoxian-web-clipper",
    "dev-chrome-lazy": "npm run dev-chromium-lazy",
    "dev-chromium-lazy": "web-ext run --no-reload --target chromium --source-dir dist/extension/maoxian-web-clipper",
    "dev-firefox-lazy": "web-ext run --no-reload --target firefox-desktop --source-dir dist/extension/maoxian-web-clipper",
    "build-chromium": "cross-env NODE_ENV=production MX_PLATFORM=chromium MX_PLATFORM_ID=$MX_CHROMIUM_ID MX_PLATFORM_UPDATE_URL=$MX_CHROMIUM_UPDATE_URL webpack --mode=production --progress",
    "build-firefox": "cross-env NODE_ENV=production MX_PLATFORM=firefox MX_PLATFORM_ID=$MX_FIREFOX_ID webpack --mode=production --progress",
    "build-all": "npm run build-chromium && npm run build-firefox",
    "watch-chrome": "npm run watch-chromium",
    "watch-chromium": "cross-env NODE_ENV=development MX_PLATFORM=chromium MX_PLATFORM_ID=$MX_DEV_CHROMIUM_ID MX_PLATFORM_UPDATE_URL=$MX_DEV_CHROMIUM_URL webpack --mode=development --watch --progress",
    "watch-firefox": "cross-env NODE_ENV=development MX_PLATFORM=firefox MX_PLATFORM_ID=$MX_DEV_FIREFOX_ID webpack --mode=development --watch --progress",
    "test": "mocha --recursive"
  },
  "author": "Mika",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.2",
    "esm": "^3.2.25",
    "jsdom": "^15.2.1",
    "mocha": "^9.1.3",
    "remove-files-webpack-plugin": "^1.4.0",
    "sinon-chrome": "^3.0.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "zip-webpack-plugin": "^4.0.1"
  },
  "dependencies": {
    "awesomplete": "^1.1.5",
    "blueimp-md5": "^2.12.0",
    "css-selector-generator": "^3.4.4",
    "css.escape": "^1.5.1",
    "mathml2latex": "^1.1.3",
    "mustache": "^4.2.0",
    "pikaday": "^1.8.2",
    "roddeh-i18n": "^1.2.0",
    "strip-css-comments": "^4.1.0",
    "turndown": "^7.1.1",
    "turndown-plugin-gfm": "^1.0.2",
    "webextension-polyfill": "^0.8.0"
  }
}
